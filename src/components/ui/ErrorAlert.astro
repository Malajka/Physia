---
import { errorAlertBase } from "@/lib/constants/uiClasses";
export interface Props {
  message: string;
  href: string;
  label: string;
}
const { message, href, label } = Astro.props;
---

<div class={errorAlertBase}>
  <p>{message}</p>
  <a href={href} class="text-blue-600 hover:underline mt-2 inline-block">
    {label}
  </a>
</div>
