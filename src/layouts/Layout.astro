---
import { LogoutButton } from "../components/auth/LogoutButton";
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Physia - Exercise Plans" } = Astro.props;

// Check if user is authenticated
const { data: { session } } = await Astro.locals.supabase.auth.getSession();
const isAuthenticated = !!session;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-50">
    <header class="bg-white shadow-sm">
      <div class="container mx-auto px-4 py-3 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-700">Physia</a>
        
        <nav>
          <ul class="flex space-x-6">
            {!isAuthenticated ? (
              <>
                <li><a href="/login" class="text-gray-700 hover:text-blue-600 hover:underline">Log in</a></li>
                <li><a href="/register" class="text-gray-700 hover:text-blue-600 hover:underline">Register</a></li>
              </>
            ) : (
              <>
                <li><a href="/sessions" class="text-gray-700 hover:text-blue-600 hover:underline">My Sessions</a></li>
                <li><a href="/body-parts" class="text-gray-700 hover:text-blue-600 hover:underline">New Session</a></li>
                <li><LogoutButton client:load /></li>
              </>
            )}
          </ul>
        </nav>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="mt-8 py-6 bg-gray-100 text-center text-sm text-slate-500">
      <div class="container mx-auto px-4">
        <p>&copy; {new Date().getFullYear()} Physia. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
