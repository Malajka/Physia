---
import { AuthForm } from "../components/auth/AuthForm";
import { InputField } from "../components/auth/InputField";
import { LinkButton } from "../components/auth/LinkButton";
import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout title="Forgot Password - Physia">
  <div class="container mx-auto max-w-md p-4">
    <header class="mb-8 text-center">
      <a href="/" class="inline-block">
        <h1 class="text-3xl font-bold text-blue-700">Physia</h1>
        <p class="text-sm text-slate-600">Personalized Exercise Plans</p>
      </a>
    </header>

    <main class="bg-white rounded-lg shadow-md p-6 md:p-8">
      <AuthForm
        title="Reset Password"
        onSubmit={async () => {
          // Will be implemented later
          console.log("Forgot password form submitted");
        }}
        submitText="Send Reset Link"
        client:load
      >
        <div class="mb-6 p-4 bg-blue-50 border border-blue-200 text-blue-700 rounded">
          Enter your email address, and we'll send you a link to reset your password.
        </div>
        
        <InputField
          id="email"
          label="Email"
          type="email"
          placeholder="your@email.com"
          required
          value=""
          onChange={(value) => console.log(value)}
          client:load
        />
      </AuthForm>
      
      <div class="mt-6 text-center">
        <p class="text-gray-600 mb-2">Remembered your password?</p>
        <LinkButton href="/login" variant="secondary" client:load>
          Back to Login
        </LinkButton>
      </div>
    </main>

    <footer class="mt-8 text-center text-sm text-slate-500">
      <p>&copy; {new Date().getFullYear()} Physia. All rights reserved.</p>
    </footer>
  </div>
</Layout> 